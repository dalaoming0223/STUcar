<!--pages/blog-comment/blog-comment.wxml-->
<scroll-view scroll-y="true" class="container">
  <view class="blog-card">
    <x-blog-card blog="{{blog}}" />
  </view>

  <!-- 评论tab -->
  <view class="tab">
    <view class="tab-item">评论列表</view>
  </view>

  <!-- 评论内容列表 -->
  <view class="comment-list">
    <!-- 评论 -->
    <block wx:for="{{commentList}}" wx:key="_id">
      <view class="comment">
        <view class="comment-content">
          <image class="comment-portrait" src="{{item.avatarUrl}}"></image>
          <text class="comment-nickname">{{item.nickName}}</text>
          <view class="comment-text">{{item.content}}</view>
          <view class="comment-time">{{item.createTime}}</view>
        </view>
      </view>
    </block>
  </view>

  <view class="no-comment" hidden="{{isComment}}">
      还没有评论，快抢占沙发吧~
  </view>
</scroll-view>

<view class="blog-ctrl">
  <x-blog-ctrl blogId="{{blog._id}}" iconfont="iconfont" icon-pinglun="icon-pinglun" icon-fenxiang="icon-fenxiang" bind:refreshCommentList="_getBlogDetail" />
</view>
