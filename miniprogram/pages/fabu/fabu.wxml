<!--pages/fabu/fabu.wxml-->
<scroll-view class="">

    <form class="biaoge" bindsubmit="tijiaoxinxi">
        <view class="cu-form-group margin-top">
            <view class="title">路线选择</view>
            <picker bindchange="PickerChange" value="{{index}}" range="{{picker}}" name="luxian">
                <view class="picker">
                    {{index?picker[index]:'线路信息'}}
                </view>
            </picker>
        </view>
        <view class="cu-form-group">
            <view class="title">时间选择</view>
            <picker mode="time" value="{{time}}" start="09:01" end="21:01" bindchange="TimeChange" name="shijian">
                <view class="picker">
                    {{time}}
                </view>
            </picker>
        </view>
        <view class="cu-form-group">
            <view class="title">日期选择</view>
            <picker mode="date" value="{{date}}" start="2019-12-03" end="2020-12-03" bindchange="DateChange"
                name="date">
                <view class="picker">
                    {{date}}
                </view>
            </picker>
        </view>
        <view class="cu-form-group">
            <view class="title">上车地点选择</view>
            <picker bindchange="RegionChange" value="{{region}}" range="{{picker2}}" name="location">
                <view class="picker">
                    {{region?picker2[region]:'上车地点'}}
                </view>
            </picker>
        </view>
        <view class="cu-form-group">
            <view class="title">性别</view>
            <switch class="switch-sex" name="sex" checked></switch>
        </view>
        <view class="cu-form-group margin-top">
            <textarea maxlength="-1" disabled="{{modalName!=null}}" placeholder="输入" name="neirong"></textarea>
        </view>
        <button formType="submit">提交</button>
    </form>

</scroll-view>