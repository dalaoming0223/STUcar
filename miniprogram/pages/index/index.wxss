  height: 80rpx;
  padding: 0 20rpx;
  align-items: center;
  background-color: #ffffff;
  margin-bottom: 10rpx;
}
.hot-info-view .icon{
  width: 45rpx;
  height: 45rpx;
}
.hot-info-view .icon image{
  width: 100%;
  height: 100%;
}
.hot-view{
  flex: 1;
  height: 40rpx;
  margin-left: 20rpx;
}
.hot-info-view .swiper-box{
  position: relative;
  height: 40rpx;
  line-height: 40rpx;
  overflow: hidden;
}
.hot-info-view .swiper-box .item{
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 28rpx;
