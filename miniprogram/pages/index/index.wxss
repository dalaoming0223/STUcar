page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
/* 搜索框1 */
.search{
  margin-left: 100rpx;
  margin-right: 100rpx;
  padding-right: 50rpx;
  padding-left: 50rpx;
  height: 44px;
  display: flex;
  z-index: 99;
  /* position: fixed; */
  border-radius: 27px;
  background: rgba(44, 58, 184, 0.6)
}
.searchbox{
  flex: 1;
  height: 30px;
  margin-left: 20rpx;
  margin-right: 20rpx;
  display: flex;
