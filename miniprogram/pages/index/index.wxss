/**/
.userinfo, .uploader, .tunnel {
  margin-top: 40rpx;
  height: 140rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.userinfo-avatar:after {
  border: none;
}

.userinfo-nickname {
  font-size: 32rpx;
  color: #007aff;
  background-color: white;
  background-size: cover;
}

.userinfo-nickname::after {
  border: none;
}

.uploader, .tunnel {
  height: auto;
  padding: 0 0 0 40rpx;
  flex-direction: column;
  align-items: flex-start;
  box-sizing: border-box;
}

.uploader-text, .tunnel-text {
  width: 100%;
  line-height: 52px;
  font-size: 34rpx;
  color: #007aff;
}

.uploader-container {
  width: 100%;
  height: 400rpx;
  padding: 20rpx 20rpx 20rpx 0;
  display: flex;
  align-content: center;
  justify-content: center;
  box-sizing: border-box;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
}

.uploader-image {
  width: 100%;
  height: 360rpx;
}

.tunnel {
  padding: 0 0 0 40rpx;
}

.tunnel-text {
  position: relative;
  color: #222;
  display: flex;
  flex-direction: row;
  align-content: center;
  justify-content: space-between;
  box-sizing: border-box;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
}

.tunnel-text:first-child {
  border-top: none;
}

.tunnel-switch {
  position: absolute;
  right: 20rpx;
  top: -2rpx;
}

.disable {
  color: #888;
}

.service {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background: linear-gradient(#007aff, #0063ce);
  box-shadow: 0 5px 10px rgba(0, 0, 0, 0.3);
  display: flex;
  align-content: center;
  justify-content: center;
  transition: all 300ms ease;
}

.service-button {
  position: absolute;
  top: 40rpx;
}

.service:active {
  box-shadow: none;
}

.request-text {
  padding: 20rpx 0;
  font-size: 24rpx;
  line-height: 36rpx;
  word-break: break-all;
}
/* 搜索框 */
.search-container {
  margin-top: 20rpx;
  background-color: #fff;
  flex: 1;
}
/* 内容 */
/* 列表信息 */
.data-list{
  padding: 10rpx 20rpx;
}
.data-list .list-table{
  margin-top: 20rpx;
  padding: 0rpx 20rpx;
  border-radius: 10rpx;
  background: #ffffff;
  /* box-shadow: 0 0 5rpx #ccc; */
}
.data-list .top-view{
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.data-list .headImgName{
  flex: 1;
  display: flex;
  align-items: center;
  padding-top: 15rpx;
}
.data-list .headImgName .img{
  width: 60rpx;
  height: 60rpx;
  background-color: #ccc;
  border-radius: 50%;
}
.data-list .headImgName .name{
  flex: 1;
  margin-left: 10rpx;
  font-size: 28rpx;
  color: #100000;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  font-weight: bold;
}
.data-list .dreicTel{
  width: 400rpx;
  display: flex;
  justify-content: space-between;
}
.data-list .dreicTel .direction{
  font-size: 26rpx;
  color: #100000;
  font-weight: bold;
}
.data-list .dreicTel .tel{
  font-size: 26rpx;
  color: #7CFC00;
  font-weight: bold;
}
.data-list .trip{
  display: flex;
  flex-direction: column;
}
.data-list .trip>view{
  margin-bottom: 10rpx;
}
.data-list .label{
  font-size: 26rpx;
  color: #100000;
}
.data-list .set-out{
  display: flex;
  margin-bottom: 20rpx;
  align-items: center;
}
.data-list .setOut-time{
  font-size: 26rpx;
  color: #100000;
}
.data-list .route-line{
  display: flex;
}
.data-list .route-line .route{
  flex: 1;
  font-size: 26rpx;
  color: #100000;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 4;
  -webkit-box-orient: vertical;
}
.data-list .route-item{
  display: inline-block
}
.data-list .route-item:after{
  content: '';
  display: inline-block;
  width: 18rpx;
  height: 1px;
  background-color: #9B9B9B;
  margin-top: -3rpx;
}
.data-list .route-item:last-child::after{
  display: none;
}

.bottom-view{
  height: 90rpx;
  font-size: 24rpx;
  color: #9B9B9B;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.seat .number{
  font-size: 30rpx;
  color: red;
}
.null-view{
  width: 100%;
  height: 400px;
}
.other-info{
  padding-bottom: 15prx;
}
.touming-view{
  width: 100%;
  background-color: #ccc;
  opacity: 0;
  position: fixed;
  bottom: 0rpx;
  z-index: 788;
}
/* 发布信息按钮 */
.publish-btn{
  position: fixed;
  bottom: 30rpx;
  right: 30rpx;
  width: 80rpx;
  height: 80rpx;
  -webkit-animation: animateLeft 1.2s;
  animation: animateLeft 1.2s;
  z-index: 899;
}
.right-view{
  position: absolute;
  right: -95rpx;
  top: 20rpx;
  width: 115rpx;
  height: 40rpx;
  z-index: 889;
  background-color: rgba(0, 145, 255, 0.4);
}
.blod-view{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 898;
  border-radius: 50%;
  overflow: hidden;
  background-color: #ffffff;
  transition: all 0.2s ease 0.1s;
}
.navigator{
  width: 100%;
  height: 100%;
  border-radius: 50%;
  overflow: hidden;
}
.blod-view image{
  width: 100%;
  height: 100%;
  transition: all 0.2s ease 0.1s;
}
.edit-btn{
  background-color: #ffffff;
  z-index: 999;
}
.edit-icon.on{
  display: none;
}
.close-icon.on{
  display: block;
  transform: rotate(180deg);
  -webkit-transform: rotate(180deg)
}
.blod-view.rc.on{
  left: 0;
  top: -120rpx;
  transform: rotate(720deg);
  -webkit-transform: rotate(720deg)
}
.blod-view.cr.on{
  left: -100rpx;
  top: -100rpx;
  transform: rotate(-765deg);
  -webkit-transform: rotate(-765deg)
}
.blod-view.bl.on{
  left: -120rpx;
  top: 0rpx;
  transform: rotate(720deg);
  -webkit-transform: rotate(720deg)
}
@-webkit-keyframes animateLeft {
  0%{
    right:-80rpx;
  } 
  20%{
    right: 30rpx;
  }
  40%{
    right:95rpx;
  }
  60%{
    right: 0rpx;
  } 
  80% {
    right: 60rpx;
  } 
  20%{
    right:30rpx;
  }
}
 
@keyframes animateLeft {
  0%{
    right: -80rpx;
  }
  20%{
    right: 30rpx;
  }
  40%{
    right:95rpx;
  } 
  60% {
    right: 0rpx;
  }
  80%{
    right: 60rpx;
  } 
  20%{
    right:30rpx;
  }
}
